---
import '../../styles.css';
import crypto from 'crypto';
const nonce = crypto.randomBytes(16).toString('base64');
const allowUnsafeStyles = process.env.NODE_ENV !== 'production';
const styleDirective = allowUnsafeStyles ? "'unsafe-inline'" : `'nonce-${nonce}'`;
const csp = `default-src 'self'; script-src 'self' 'nonce-${nonce}'; style-src 'self' https://fonts.googleapis.com ${styleDirective}; font-src 'self' https://fonts.gstatic.com; img-src 'self' data:; connect-src 'self';`;
---
<!-- Admin login page. Uses client-side form posting to /api/login. -->
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Login — Smart Attendance</title>
    <!-- CSP with per-request nonce for scripts/styles. In dev, unsafe-inline is allowed for styles. -->
    <meta http-equiv="Content-Security-Policy" content={csp} />
    <link href="https://fonts.googleapis.com/css2?family=Material+Icons" rel="stylesheet" />
    <meta name="referrer" content="no-referrer" />
  </head>
  <body class="bg-dark centered-viewport">
    <main class="auth-wrap md-card fade-in" style="display:flex;flex-direction:column;gap:12px;align-items:stretch">
      <div style="display:flex;align-items:center;gap:12px"><span class="material-icons">security</span><h2 class="accent" style="margin:0">Admin Login</h2></div>
      <!-- Login form: use client-side form posting to /api/login.json -->
      <form id="loginForm" autocomplete="on" novalidate style="display:flex;flex-direction:column;gap:8px">
        <label for="username">Username</label>
        <input id="username" name="username" autocomplete="username" required maxlength="100" class="md-input" />
        <label for="password">Password</label>
        <input id="password" name="password" type="password" autocomplete="current-password" required maxlength="128" class="md-input" />
        <button id="submitBtn" class="md-btn primary" type="submit"><span class="material-icons">login</span> Sign in</button>
      </form>
      <!-- ARIA live region for status messages (screen-reader friendly) -->
      <p id="msg" class="muted" aria-live="polite" role="status"></p>
    </main>

    <script type="module" nonce={nonce}>
      // Client-side login handler with basic client throttling and sanitization.
      // Note: server enforces strongest security (rate-limiting, hashing, revocation).
      const form = document.getElementById('loginForm');
      const msg = document.getElementById('msg');
      const submitBtn = document.getElementById('submitBtn');

      // Basic session-scoped attempt limiter to reduce spam from a single browser
      const ATTEMPT_KEY = 'sa_login_attempts';
      const MAX_ATTEMPTS = 5;
      const LOCK_MS = 15 * 60 * 1000; // 15 minutes

      function attemptsGet(){
        try { return JSON.parse(sessionStorage.getItem(ATTEMPT_KEY) || 'null') || {count:0, lockedUntil:0}; } catch(e){ return {count:0, lockedUntil:0}; }
      }
      function attemptsSave(v){ sessionStorage.setItem(ATTEMPT_KEY, JSON.stringify(v)); }

      function isLocked(){ const v = attemptsGet(); return v.lockedUntil && Date.now() < v.lockedUntil; }
      function recordFailure(){ const v = attemptsGet(); v.count = (v.count||0)+1; if(v.count>=MAX_ATTEMPTS) v.lockedUntil = Date.now()+LOCK_MS; attemptsSave(v); }
      function resetAttempts(){ sessionStorage.removeItem(ATTEMPT_KEY); }

      function sanitizeInput(s, maxLen=200){ return String(s||'').trim().slice(0, maxLen); }

      if(form instanceof HTMLFormElement && msg && submitBtn){
        form.addEventListener('submit', async (e) => {
          e.preventDefault();
          if(isLocked()){ msg.textContent = 'Too many attempts. Try again later.'; return; }

          // Disable UI while submitting
          submitBtn.disabled = true;
          msg.textContent = 'Signing in...';

          const username = sanitizeInput(form.username.value, 100);
          const password = sanitizeInput(form.password.value, 128);

          // Minimal client-side validation
          if(!username || !password){ msg.textContent = 'Invalid credentials'; submitBtn.disabled = false; return; }

          try{
            const res = await fetch('/api/login.json', {
              method: 'POST',
              credentials: 'same-origin', // ensure cookies are accepted
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ username, password })
            });

            if(res.ok){
              // Successful login — clear attempts and redirect
              resetAttempts();
              msg.textContent = 'Login successful — redirecting.';
              // short delay to allow screen readers to announce
              setTimeout(()=> location.href = '/admin/dashboard', 450);
            } else {
              // Server returns structured reason; show user-friendly message
              const j = await res.json().catch(()=>null);
              recordFailure();
              if(j && j.reason === 'user'){
                msg.textContent = 'Unknown username';
              } else if(j && j.reason === 'password'){
                msg.textContent = 'Incorrect password';
              } else if(j && j.reason === 'rate_limited'){
                msg.textContent = 'Too many attempts. Try later.';
              } else {
                msg.textContent = j?.message || 'Login failed';
              }
              // clear password input for safety
              form.password.value = '';
              submitBtn.disabled = false;
            }
          } catch(err){
            console.error('Login request failed', err);
            msg.textContent = 'Network error';
            submitBtn.disabled = false;
          }
        });
      }
    </script>
  </body>
</html>
